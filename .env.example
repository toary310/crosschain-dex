# ChainBridge DEX Environment Variables

# WalletConnect Project ID (Required for wallet connections)
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# RPC URLs (Optional - fallback to public RPCs if not provided)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth.llamarpc.com
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon.llamarpc.com
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum.llamarpc.com
NEXT_PUBLIC_OPTIMISM_RPC_URL=https://optimism.llamarpc.com
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://avalanche.public-rpc.com
NEXT_PUBLIC_BASE_RPC_URL=https://base.llamarpc.com
NEXT_PUBLIC_BSC_RPC_URL=https://bsc.llamarpc.com

# Alchemy API Key (for enhanced RPC endpoints)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# DEX Aggregator APIs (Optional)
NEXT_PUBLIC_1INCH_API_KEY=your_1inch_api_key
NEXT_PUBLIC_0X_API_KEY=your_0x_api_key
NEXT_PUBLIC_PARASWAP_API_KEY=your_paraswap_api_key
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Error reporting and monitoring endpoints
NEXT_PUBLIC_ERROR_REPORTING_ENDPOINT=
NEXT_PUBLIC_SECURITY_ENDPOINT=
NEXT_PUBLIC_PERFORMANCE_WEBHOOK=
NEXT_PUBLIC_MONITORING_WEBHOOK=

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# App Configuration
NEXT_PUBLIC_APP_NAME=ChainBridge DEX
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Next-generation cross-chain decentralized exchange
